<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validation App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <h1><br>Validation application</h1>
    <br><br>
    <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
          <div class="alert alert-warning" role="alert">
                <%= error.msg %>
                  <span aria-hidden="true"></span>
                </button>
              </div>
        <% }) %>
    <% } %>
    <form action="/" method="post">
      <label for="first" class="form-label">Name</label>
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="first name" id="first" name="first">
        <input type="text" class="form-control" placeholder="last name" id="last" name="last">
      </div>
      <div id="emailHelp" class="form-text">Name can't contain numbers.</div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" name="email">
          <div id="emailHelp" class="form-text">Must be a valid email address.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password">
          <div id="emailHelp" class="form-text">Password must be between 8 and 64 characters, contain at least one number, one uppercase character and one lowercase character</div>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="birthday" name="birthday" id="birthday">
            <input type="text" class="form-control" placeholder="birthmonth" name="birthmonth" id="birthmonth">
            <input type="text" class="form-control" placeholder="birthyear" name="birthyear" id="birthyear">
          </div>
          <div id="emailHelp" class="form-text">Must be a valid birth date.</div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>
</html>